%p#notice= notice

%h1= @event.title

%dl
  %dt questions
  %dd= @event.questions
  %dt started_at
  %dd= @event.started_at
  %dt ended_at
  %dd= @event.ended_at

.actions
  = link_to 'Edit', edit_event_path(@event)
  \|
  = link_to 'Destroy', @event, :method => :delete, :data => { :confirm => 'Are you sure?' }
  \|
  = link_to 'Back', events_path
